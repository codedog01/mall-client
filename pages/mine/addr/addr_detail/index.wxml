<l-input label="收货人" name="userName" value="{{userName}}" bindinput="UserNameInput" placeholder=""></l-input>

<l-input label="手机号码" name="phone" value="{{phone}}" bindinput="PhoneInput" placeholder="">
        <view class="cu-capsule radius" slot="right">
                <view class="cu-tag bg-blue">
                        +86
                </view>
                <view class="cu-tag line-blue">
                        中国大陆
                </view>
        </view>
</l-input>

<l-picker label="所在地区" type="region" region="{{region}}" />

<view class="cu-form-group align-start">
        <view class="title">详细地址</view>
        <textarea maxlength="50" bindinput="detailInput" name="signature" value="{{detail}}" placeholder="尽量精确到门牌号~"></textarea>
</view>

<view class="cu-form-group margin-top">
        <view class="title">默认地址</view>
        <switch checked="{{isDefault}}" bind:tap="IsDefaultChange"></switch>
</view>

<van-button type="primary" color="#F40" block>保存</van-button>
