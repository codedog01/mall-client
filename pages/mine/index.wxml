<scroll-view scroll-y class="scrollPage">
    <view class="UCenter-bg">
        <!-- 头像位置 -->
        <view class="cu-avatar round myavatar xl"
              style="background-image:url({{avatarImage}});" bindtap="ChooseImage">
        </view>
        <view class="userinfo">
            <text class="margin-top-sm text-xl text-bold">{{nickName}}</text>
        </view>

        <image src="../../icons/wave.gif" mode="scaleToFill" class="gif-wave"></image>
    </view>
    <view class="padding flex text-center text-grey bg-white shadow-warp" bindtap="showModal">

    </view>

    <!-- 菜单 -->
    <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">

        <view class="cu-list grid col-2 ">
            <view class="cu-item">
                <view class="cuIcon-goods text-orange" bindtap="navigateTo" data-url="./sell/index">
                    <text>我要卖货</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-searchlist text-cyan" bindtap="navigateTo" data-url="./search/index">
                    <text>我要寻物</text>
                </view>
            </view>
        </view>

        <view class="cu-list grid col-3 ">
            <view class="cu-item">
                <view class="cuIcon-cart ">
                    <text>购物车</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-home">
                    <text>我的地址</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-check ">
                    <text>已完成</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-phone">
                    <text>绑定手机</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-form">
                    <text>商家入驻</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-friend">
                    <text>使用帮助</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-squarecheck">
                    <text>我订阅的</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-send">
                    <text>积分明细</text>
                </view>
            </view>
            <view class="cu-item">
                <view class="cuIcon-fold">
                    <text>版本更新</text>
                </view>
            </view>
        </view>
    </view>


</scroll-view>