.UCenter-bg {
  background-image: url(http://up.36992.com/pic/35/18/e7/3518e7cfa7dedec7b96acda3617229da.jpg);
  /* background-image: url(https://static.meiye.art/FjCI1XicLNGF-JQ9cFL9QjprOw71); */
  /* background-image: url(https://static.meiye.art/FuCSE4wAPP022PFUN4ClxPrUaO2M); */
  background-size: cover;
  height: 400rpx;
  display: flex;
  /* justify-content: center; */
  padding: 0;
  margin: 0;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 81rpx;
}

.UCenter-bg .myavatar {
  position: absolute;
  margin-top: 80rpx;

}

.UCenter-bg .userinfo {
  position: absolute;
  top: 210rpx;
}

map, .mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map, .mapBox {
  width: 750rpx;
  height: 300rpx;
}